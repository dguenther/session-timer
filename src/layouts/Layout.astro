---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Session Timer" />
		<meta name="viewport" content="width=device-width, minimum-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/session-timer/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="bg-blue-900 text-gray-200">
		<slot />
	</body>
</html>
